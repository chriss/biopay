#!/usr/bin/env perl
use strict;
use warnings;
use Dancer qw/:syntax/;
use FindBin;
use Cwd qw/realpath/;
use Try::Tiny;
use lib "$FindBin::Bin/../lib";
use Dancer::Plugin::Bcrypt;

Dancer::Config::setting('appdir',realpath("$FindBin::Bin/.."));
Dancer::Config::load();

$| = 1;

print "Enter password you wish to crypt: ";
my $pass = <>;
chomp $pass;
print "\n\nCrypted password is: " . bcrypt($pass);
